<script>
  function initializeResume() {
    const navBtns = document.querySelectorAll('.nav-btn');
    const sections = document.querySelectorAll('.section');
    const wrapper = document.querySelector('.resume-wrapper');
    
    // Tab switching functionality
    navBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        const targetSection = target.dataset.section;
        
        if (!targetSection) return;
        
        // Update active button
        navBtns.forEach(navBtn => navBtn.classList.remove('active'));
        target.classList.add('active');
        
        // Update active section
        sections.forEach(section => section.classList.remove('active'));
        const targetSectionElement = document.querySelector(`.section[data-section="${targetSection}"]`);
        if (targetSectionElement) {
          targetSectionElement.classList.add('active');
        }
      });
    });
    
    // Animate in
    setTimeout(() => {
      if (wrapper) {
        wrapper.classList.add('animate-in');
      }
    }, 100);
    
    // Skill tag hover effects
    const skillTags = document.querySelectorAll('.skill-tag');
    skillTags.forEach(tag => {
      const htmlTag = tag as HTMLElement;
      tag.addEventListener('mouseenter', () => {
        htmlTag.style.background = 'rgba(255, 255, 255, 0.4)';
      });
      tag.addEventListener('mouseleave', () => {
        htmlTag.style.background = 'rgba(255, 255, 255, 0.3)';
      });
    });
  }
  
  // Initialize when DOM is ready
  document.addEventListener('DOMContentLoaded', initializeResume);
</script>