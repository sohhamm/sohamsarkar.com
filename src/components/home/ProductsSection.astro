---
import ProductCard from './ProductCard.astro'

export interface Product {
  id: number
  title: string
  description: string
  image: string
  link: string
  status: string
  category: string
}

const products: Product[] = [
  {
    id: 1,
    title: 'SuperDivide',
    description:
      'A blazingly fast way to create, manage & settle shared expenses without any hassle.',
    image: '/products/superdivide.webp',
    link: 'https://www.superdivide.com?ref=sohamsarkar.com',
    status: 'Beta',
    category: 'Personal Finance',
  },
  {
    id: 2,
    title: 'Ritua',
    description: 'The best free habit tracker out there.',
    image: '/products/ritua.webp',
    link: 'https://www.getritua.com?ref=sohamsarkar.com',
    status: 'Coming Soon',
    category: 'Productivity',
  },
]
---

<section class='products-section' data-products-section>
  <div class='products-header'>
    <div class='header-content'>
      <h1 class='main-title'>Products</h1>
      <p class='subtitle' data-products-title>Built to make life easier.</p>
    </div>
  </div>

  <div class='products-grid' data-products-grid>
    {
      products.map(product => (
        <div class='grid-card'>
          <ProductCard product={product} variant='compact' />
        </div>
      ))
    }
  </div>
</section>

<style>
  .products-section {
    padding: 80px 0;
    margin-bottom: 60px;
    position: relative;
  }

  .products-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  }

  .products-header {
    margin-bottom: 48px;
    text-align: left;
  }

  .main-title {
    color: #fff;
    font-family: 'Victor Mono', monospace;
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 500;
    line-height: 1;
    letter-spacing: -0.05em;
    margin-bottom: 12px;
  }

  .subtitle {
    color: #fff;
    font-family: 'Victor Mono', monospace;
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-style: italic;
    font-weight: 400;
    line-height: 1;
    letter-spacing: -0.08em;
    margin: 0;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }

  .grid-card {
    display: flex;
  }

  @media (max-width: 1024px) {
    .products-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }

  @media (max-width: 768px) {
    .products-section {
      padding: 60px 0;
      margin-bottom: 40px;
    }

    .products-header {
      margin-bottom: 32px;
    }
  }
</style>

<script>
  import {animate} from 'motion'

  class ProductsSection {
    private section: HTMLElement | null = null
    private observer: IntersectionObserver | null = null

    constructor() {
      this.init()
    }

    private init() {
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => this.setup())
      } else {
        this.setup()
      }
    }

    private setup() {
      this.section = document.querySelector('[data-products-section]')
      if (!this.section) return

      this.setupIntersectionObserver()
    }

    private setupIntersectionObserver() {
      if (!this.section) return

      this.observer = new IntersectionObserver(
        entries => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              this.animateElements()
              this.observer?.unobserve(entry.target)
            }
          })
        },
        {
          threshold: 0.1,
          rootMargin: '0px 0px -100px 0px',
        },
      )

      this.observer.observe(this.section)
    }

    private animateElements() {
      const title = this.section?.querySelector('[data-products-title]') as HTMLElement
      const grid = this.section?.querySelector('[data-products-grid]') as HTMLElement

      const elements = [title, grid].filter(Boolean)

      elements.forEach((el, index) => {
        if (el) {
          el.style.opacity = '0'
          el.style.transform = 'translateY(30px)'

          animate(
            el,
            {
              opacity: 1,
              transform: 'translateY(0px)',
            },
            {
              duration: 0.8,
              delay: index * 0.2,
              ease: [0.22, 1, 0.36, 1],
            },
          )
        }
      })
    }

    destroy() {
      this.observer?.disconnect()
    }
  }

  new ProductsSection()
</script>
