---
import Layout from '../layouts/layout.astro'
import Button from '../components/Button.astro'
import BlogsSection from '../components/BlogsSection.astro'
import ProjectsSection from '../components/ProjectsSection.astro'
import ProductsSection from '../components/home/ProductsSection.astro'
import {Icon} from 'astro-icon/components'

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Soham Sarkar',
  description: 'Software Engineer | Builder | Tech | Product',
  url: 'https://sohamsarkar.com',
  sameAs: [
    'https://github.com/sohhamm',
    'https://linkedin.com/in/sohhamm',
    'https://twitter.com/sohamsarkartech',
    'https://instagram.com/codebandit',
  ],
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Bangalore',
    addressRegion: 'Karnataka',
    addressCountry: 'India',
  },
  knowsAbout: [
    'React',
    'TypeScript',
    'JavaScript',
    'Go',
    'Node.js',
    'PostgreSQL',
    'Full-Stack Development',
    'Web Development',
    'Software Engineering',
  ],
}

const content = {
  title: 'Soham Sarkar - Builder | Tech | Product | Software Engineer',
  description:
    'I craft impactful software experiences with code. Full-stack developer specializing in React, TypeScript, Go, and modern web technologies. Based in Bangalore, working worldwide.',
  ogImage: '/opengraph.png',
  structuredData,
}
---

<Layout content={content}>
  <section class='hero-section'>
    <div class='hero-text'>
      <h1>
        I'm a <span>digital gardener</span>, and I
        <span class='italic-text'>craft impactful software experiences</span>
        with code.
      </h1>
      <p>
        I'll grow your ideas from tiny seeds into towering trees ðŸŒ±.<br /> Already have a garden? Let's
        transform it into a thriving forest ðŸŒ².
      </p>
      <Button href='https://cal.com/soham-sarkar-work'
        >Contact Me <Icon name='arrow-right' /></Button
      >
    </div>
  </section>

  <ProjectsSection isHomePage />
  <ProductsSection />
  <BlogsSection />

  <style>
    .hero-section {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 65dvh;
      color: #ffffff;
    }

    .hero-section::selection {
      background: limegreen;
    }

    .hero-text {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 24px;
      width: 100%;
    }

    h1 {
      color: #fff;
      font-size: 4.5rem;
      font-weight: 400;
      line-height: 100%;
      letter-spacing: -0.36rem;
    }

    .italic-text {
      font-style: italic;
      color: #7f7f7f;
    }

    p {
      font-size: 1.25rem;
      font-weight: 500;
      color: #71717a;
    }

    @media (max-width: 768px) {
      h1 {
        font-size: 3.5rem;
        letter-spacing: -0.28rem;
      }
    }

    @media (max-width: 480px) {
      h1 {
        font-size: 2.5rem;
        letter-spacing: -0.2rem;
      }
    }
  </style>
</Layout>
