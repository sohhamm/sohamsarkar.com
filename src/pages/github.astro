<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Redirecting to GitHub | Soham Sarkar</title>
    <meta http-equiv='refresh' content='4; url=https://github.com/sohhamm' />
    <link rel='canonical' href='https://github.com/sohhamm' />

    <!-- Preconnect for faster redirect -->
    <link rel='preconnect' href='https://github.com' />

    <!-- Favicon -->
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />

    <!-- SEO Meta Tags -->
    <meta name='description' content="Redirecting to Soham Sarkar's GitHub profile" />
    <meta name='robots' content='noindex, nofollow' />

    <!-- Open Graph -->
    <meta property='og:title' content='Redirecting to GitHub | Soham Sarkar' />
    <meta property='og:description' content="Visit Soham Sarkar's GitHub profile" />
    <meta property='og:type' content='website' />
    <meta property='og:url' content='https://sohamsarkar.com/github' />
    <meta property='og:image' content='https://sohamsarkar.com/opengraph.png' />
  </head>
  <body>
    <div class='redirect-container'>
      <div class='redirect-content'>
        <div class='logo'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='60'
            height='60'
            viewBox='0 0 24 24'
            fill='currentColor'
          >
            <path
              d='M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z'
            ></path>
          </svg>
        </div>
        <h1>Connecting to GitHub...</h1>
        <p>Taking you to Soham Sarkar's GitHub profile</p>

        <div class='loading-container'>
          <div class='progress-bar'>
            <div class='progress-fill'></div>
          </div>
          <div class='loading-spinner'></div>
        </div>
        <p class='fallback-text'>
          If you're not redirected automatically,
          <a href='https://github.com/sohhamm' class='redirect-link'>click here</a>
        </p>
      </div>
    </div>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Victor Mono', monospace;
        background: linear-gradient(135deg, #24292e 0%, #1a1e22 100%);
        color: white;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        animation: fadeIn 0.3s ease-out forwards;
      }

      @keyframes fadeIn {
        to {
          opacity: 1;
        }
      }

      .redirect-container {
        text-align: center;
        max-width: 400px;
        padding: 2rem;
        transform: translateY(20px);
        animation: slideUp 0.5s ease-out 0.1s forwards;
      }

      @keyframes slideUp {
        to {
          transform: translateY(0);
        }
      }

      .logo {
        margin-bottom: 1.5rem;
        opacity: 0;
        animation: logoFadeIn 0.4s ease-out 0.3s forwards;
        transition: transform 0.3s ease;
      }

      @keyframes logoFadeIn {
        to {
          opacity: 1;
        }
      }

      .logo:hover {
        transform: scale(1.1);
      }

      h1 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        font-weight: 400;
        opacity: 0;
        animation: textFadeIn 0.4s ease-out 0.5s forwards;
      }

      p {
        margin-bottom: 1rem;
        opacity: 0;
        animation: textFadeIn 0.4s ease-out 0.6s forwards;
      }

      .loading-container {
        margin: 2rem 0;
        opacity: 0;
        animation: textFadeIn 0.4s ease-out 0.7s forwards;
      }

      @keyframes textFadeIn {
        to {
          opacity: 1;
        }
      }

      .progress-bar {
        width: 100%;
        height: 4px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 2px;
        overflow: hidden;
        margin-bottom: 1rem;
      }

      .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #ffffff, #e6f3ff);
        border-radius: 2px;
        width: 0%;
        animation: progressFill 2.5s ease-out forwards;
      }

      @keyframes progressFill {
        to {
          width: 100%;
        }
      }

      .loading-spinner {
        width: 32px;
        height: 32px;
        border: 3px solid rgba(255, 255, 255, 0.3);
        border-top: 3px solid white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto;
      }

      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      .fallback-text {
        font-size: 0.9rem;
        margin-top: 1.5rem;
        opacity: 0;
        animation: textFadeIn 0.4s ease-out 0.8s forwards;
      }

      .redirect-link {
        color: white;
        text-decoration: underline;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-block;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
      }

      .redirect-link:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
      }

      .redirect-link:active {
        transform: translateY(0);
      }

      @media (max-width: 480px) {
        .redirect-container {
          padding: 1.5rem;
        }

        h1 {
          font-size: 1.3rem;
        }
      }
    </style>

    <script>
      function playAudio() {
        try {
          const audio = new Audio('/sounds/bloop.mp3')
          audio.volume = 0.1
          return audio.play().catch(() => {})
        } catch (e) {
          return Promise.resolve()
        }
      }

      function performRedirect() {
        playAudio()

        document.body.style.animation = 'fadeOut 0.3s ease-out forwards'

        const isMobile = /Android|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(
          navigator.userAgent,
        )
        const redirectUrl = isMobile
          ? 'github://user?username=sohhamm'
          : 'https://github.com/sohhamm'

        setTimeout(() => {
          if (isMobile) {
            // Try app first, fallback to web
            window.location.href = redirectUrl
            setTimeout(() => {
              window.location.href = 'https://github.com/sohhamm'
            }, 1000)
          } else {
            window.location.href = redirectUrl
          }
        }, 300)
      }

      const style = document.createElement('style')
      style.textContent = `
      @keyframes fadeOut {
        to {
          opacity: 0;
          transform: scale(0.95);
        }
      }
    `
      document.head.appendChild(style)

      let audioEnabled = false

      // Enable audio on any user interaction
      function enableAudio() {
        if (!audioEnabled) {
          audioEnabled = true
          document.removeEventListener('click', enableAudio)
          document.removeEventListener('keydown', enableAudio)
          document.removeEventListener('touchstart', enableAudio)
        }
      }

      document.addEventListener('click', enableAudio)
      document.addEventListener('keydown', enableAudio)
      document.addEventListener('touchstart', enableAudio)

      setTimeout(performRedirect, 2500)

      document.addEventListener('DOMContentLoaded', () => {
        const fallbackLink = document.querySelector('.redirect-link')
        if (fallbackLink) {
          fallbackLink.addEventListener('click', e => {
            e.preventDefault()
            enableAudio()
            performRedirect()
          })
        }
      })
    </script>
  </body>
</html>
