<script>
  // Client-side finance data loading
  const loadFinanceData = async () => {
    try {
      // Show loading state
      document.getElementById('total-net-worth')!.textContent = 'Loading...';
      document.getElementById('stocks-value')!.textContent = 'Loading...';
      document.getElementById('mf-value')!.textContent = 'Loading...';
      document.getElementById('bonds-value')!.textContent = 'Loading...';
      
      // Fetch portfolio data from API
      const response = await fetch('/api/finance/portfolio');
      
      if (!response.ok) {
        throw new Error('Failed to fetch portfolio data');
      }
      
      const data = await response.json();
      
      // Update the UI with API data
      document.getElementById('total-net-worth')!.textContent = data.summary.totalValue.toLocaleString();
      document.getElementById('net-worth-change')!.textContent = `+${data.summary.totalChange.toFixed(2)}%`;
      document.getElementById('net-worth-change')!.className = data.summary.totalChange >= 0 ? 'positive' : 'negative';
      
      document.getElementById('stocks-value')!.textContent = data.allocations.stocks.value.toLocaleString();
      document.getElementById('mf-value')!.textContent = data.allocations.mutualFunds.value.toLocaleString();
      document.getElementById('bonds-value')!.textContent = data.allocations.bonds.value.toLocaleString();
      
      // Update allocation percentages
      document.querySelector('.allocation-item:nth-child(1) .allocation-percentage')!.textContent = data.allocations.stocks.percentage + '%';
      document.querySelector('.allocation-item:nth-child(2) .allocation-percentage')!.textContent = data.allocations.mutualFunds.percentage + '%';
      document.querySelector('.allocation-item:nth-child(3) .allocation-percentage')!.textContent = data.allocations.bonds.percentage + '%';
      
      // Update performance data
      const performanceItems = document.querySelectorAll('.performance-item');
      if (performanceItems.length >= 4) {
        const performances = [
          { portfolio: data.performance.oneMonth, benchmark: data.performance.benchmark.oneMonth, outperformance: data.performance.oneMonth - data.performance.benchmark.oneMonth },
          { portfolio: data.performance.threeMonths, benchmark: data.performance.benchmark.threeMonths, outperformance: data.performance.threeMonths - data.performance.benchmark.threeMonths },
          { portfolio: data.performance.ytd, benchmark: data.performance.benchmark.ytd, outperformance: data.performance.ytd - data.performance.benchmark.ytd },
          { portfolio: data.performance.oneYear, benchmark: data.performance.benchmark.oneYear, outperformance: data.performance.oneYear - data.performance.benchmark.oneYear }
        ];
        
        performances.forEach((perf, index) => {
          const item = performanceItems[index];
          const portfolioValue = item.querySelector('.performance-value');
          const benchmarkValue = item.querySelector('.benchmark-value');
          const outperformanceValue = item.querySelector('.outperformance');
          const indicatorDot = item.querySelector('.indicator-dot');
          
          if (portfolioValue) {
            portfolioValue.textContent = `${perf.portfolio >= 0 ? '+' : ''}${perf.portfolio.toFixed(1)}%`;
            portfolioValue.className = `performance-value ${perf.portfolio >= 0 ? 'positive' : 'negative'}`;
          }
          if (benchmarkValue) {
            benchmarkValue.textContent = `${perf.benchmark >= 0 ? '+' : ''}${perf.benchmark.toFixed(1)}%`;
          }
          if (outperformanceValue) {
            outperformanceValue.textContent = `${perf.outperformance >= 0 ? '+' : ''}${perf.outperformance.toFixed(1)}%`;
            (outperformanceValue as HTMLElement).style.color = perf.outperformance >= 0 ? 'rgba(0, 255, 136, 0.8)' : 'rgba(255, 68, 68, 0.8)';
          }
          if (indicatorDot) {
            indicatorDot.className = `indicator-dot ${perf.outperformance >= 0 ? 'positive' : 'negative'}`;
          }
        });
      }
      
      console.log('Finance data loaded successfully from API');
      
    } catch (error) {
      console.error('Error loading finance data:', error);
      
      // Fallback data
      document.getElementById('total-net-worth')!.textContent = '1,759,075';
      document.getElementById('stocks-value')!.textContent = '759,075';
      document.getElementById('mf-value')!.textContent = '1,185,625';
      document.getElementById('bonds-value')!.textContent = '150,000';
    }
  };
  
  // Load data when page loads
  document.addEventListener('DOMContentLoaded', loadFinanceData);
  
  // Refresh data every 30 seconds
  setInterval(loadFinanceData, 30000);
</script>