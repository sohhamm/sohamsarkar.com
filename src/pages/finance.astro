export const prerender = false;

import Layout from "../layouts/layout.astro";

const { request } = Astro;

// Check for password authentication
const isAuthenticated = () => {
  const cookies = request.headers.get('cookie');
  
  // Check for auth cookie
  if (cookies) {
    const authCookie = cookies.split(';').find(cookie => 
      cookie.trim().startsWith('finance-auth=')
    );
    if (authCookie) {
      const token = authCookie.split('=')[1];
      return token === 'authenticated';
    }
  }
  
  return false;
};

// Handle password form submission
if (request.method === 'POST') {
  const formData = await request.formData();
  const password = formData.get('password');
  
  // Get password from environment variable
  const FINANCE_PASSWORD = process.env.FINANCE_PASSWORD || 'your-secure-password-here';
  
  if (password === FINANCE_PASSWORD) {
    // Set authentication cookie
    return new Response(null, {
      status: 302,
      headers: {
        'Location': '/finance',
        'Set-Cookie': 'finance-auth=authenticated; Path=/; HttpOnly; SameSite=Strict; Max-Age=3600'
      }
    });
  }
}

const authenticated = isAuthenticated();
