<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Redirecting to Peerlist | Soham Sarkar</title>
    <meta http-equiv='refresh' content='4; url=https://peerlist.io/soham' />
    <link rel='canonical' href='https://peerlist.io/soham' />

    <!-- Preconnect for faster redirect -->
    <link rel='preconnect' href='https://peerlist.io' />

    <!-- Favicon -->
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />

    <!-- SEO Meta Tags -->
    <meta name='description' content="Redirecting to Soham Sarkar's Peerlist profile" />
    <meta name='robots' content='noindex, nofollow' />

    <!-- Open Graph -->
    <meta property='og:title' content='Redirecting to Peerlist | Soham Sarkar' />
    <meta property='og:description' content="Visit Soham Sarkar's Peerlist profile" />
    <meta property='og:type' content='website' />
    <meta property='og:url' content='https://sohamsarkar.com/peerlist' />
    <meta property='og:image' content='https://sohamsarkar.com/opengraph.png' />
  </head>
  <body>
    <div class='redirect-container'>
      <div class='redirect-content'>
        <div class='logo'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='60'
            height='60'
            viewBox='0 0 100 100'
            fill='none'
          >
            <rect width='100' height='100' rx='20' fill='#00AA45'></rect>
            <path
              d='M25 75V25h20c11.046 0 20 8.954 20 20s-8.954 20-20 20H35v10H25zm10-25h10c5.523 0 10-4.477 10-10s-4.477-10-10-10H35v20z'
              fill='white'></path>
          </svg>
        </div>
        <h1>Connecting to Peerlist...</h1>
        <p>Taking you to Soham Sarkar's Peerlist profile</p>

        <div class='loading-container'>
          <div class='progress-bar'>
            <div class='progress-fill'></div>
          </div>
          <div class='loading-spinner'></div>
        </div>
        <p class='fallback-text'>
          If you're not redirected automatically,
          <a href='https://peerlist.io/soham' class='redirect-link'>click here</a>
        </p>
      </div>
    </div>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Victor Mono', monospace;
        background: linear-gradient(135deg, #00aa45 0%, #008a36 100%);
        color: white;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        animation: fadeIn 0.3s ease-out forwards;
      }

      @keyframes fadeIn {
        to {
          opacity: 1;
        }
      }

      .redirect-container {
        text-align: center;
        max-width: 400px;
        padding: 2rem;
        transform: translateY(20px);
        animation: slideUp 0.5s ease-out 0.1s forwards;
      }

      @keyframes slideUp {
        to {
          transform: translateY(0);
        }
      }

      .logo {
        margin-bottom: 1.5rem;
        opacity: 0;
        animation: logoFadeIn 0.4s ease-out 0.3s forwards;
        transition: transform 0.3s ease;
      }

      @keyframes logoFadeIn {
        to {
          opacity: 1;
        }
      }

      .logo:hover {
        transform: scale(1.1);
      }

      h1 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        font-weight: 400;
        opacity: 0;
        animation: textFadeIn 0.4s ease-out 0.5s forwards;
      }

      p {
        margin-bottom: 1rem;
        opacity: 0;
        animation: textFadeIn 0.4s ease-out 0.6s forwards;
      }

      .loading-container {
        margin: 2rem 0;
        opacity: 0;
        animation: textFadeIn 0.4s ease-out 0.7s forwards;
      }

      @keyframes textFadeIn {
        to {
          opacity: 1;
        }
      }

      .progress-bar {
        width: 100%;
        height: 4px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 2px;
        overflow: hidden;
        margin-bottom: 1rem;
      }

      .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #ffffff, #e6f3ff);
        border-radius: 2px;
        width: 0%;
        animation: progressFill 2.5s ease-out forwards;
      }

      @keyframes progressFill {
        to {
          width: 100%;
        }
      }

      .loading-spinner {
        width: 32px;
        height: 32px;
        border: 3px solid rgba(255, 255, 255, 0.3);
        border-top: 3px solid white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto;
      }

      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      .fallback-text {
        font-size: 0.9rem;
        margin-top: 1.5rem;
        opacity: 0;
        animation: textFadeIn 0.4s ease-out 0.8s forwards;
      }

      .redirect-link {
        color: white;
        text-decoration: underline;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-block;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
      }

      .redirect-link:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
      }

      .redirect-link:active {
        transform: translateY(0);
      }

      @media (max-width: 480px) {
        .redirect-container {
          padding: 1.5rem;
        }

        h1 {
          font-size: 1.3rem;
        }
      }
    </style>

    <script>
      function playAudio() {
        try {
          const audio = new Audio('/sounds/bloop.mp3')
          audio.volume = 0.1
          return audio.play().catch(() => {})
        } catch (e) {
          return Promise.resolve()
        }
      }

      function performRedirect() {
        playAudio()

        document.body.style.animation = 'fadeOut 0.3s ease-out forwards'

        setTimeout(() => {
          window.location.href = 'https://peerlist.io/soham'
        }, 300)
      }

      const style = document.createElement('style')
      style.textContent = `
      @keyframes fadeOut {
        to {
          opacity: 0;
          transform: scale(0.95);
        }
      }
    `
      document.head.appendChild(style)

      let audioEnabled = false

      // Enable audio on any user interaction
      function enableAudio() {
        if (!audioEnabled) {
          audioEnabled = true
          document.removeEventListener('click', enableAudio)
          document.removeEventListener('keydown', enableAudio)
          document.removeEventListener('touchstart', enableAudio)
        }
      }

      document.addEventListener('click', enableAudio)
      document.addEventListener('keydown', enableAudio)
      document.addEventListener('touchstart', enableAudio, { passive: true })

      setTimeout(performRedirect, 2500)

      document.addEventListener('DOMContentLoaded', () => {
        const fallbackLink = document.querySelector('.redirect-link')
        if (fallbackLink) {
          fallbackLink.addEventListener('click', e => {
            e.preventDefault()
            enableAudio()
            performRedirect()
          })
        }
      })
    </script>
  </body>
</html>
